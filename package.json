{
  "name": "proshop_mern",
  "version": "1.0.0",
  "description": "MERN Shopping cart app",
  "main": "./backend/server.js",
  "type": "module",
  "scripts": {
    "start": "node --experimental-modules .",
    "server": "nodemon --experimental-modules ./backend/server.js",
    "client": "npm start --prefix frontend/",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "data:import": "node --experimental-modules backend/seeder",
    "data:destroy": "node --experimental-modules backend/seeder -d"
  },
  "author": "Blake Fitzsimmons",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "colors": "^1.4.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-handler": "^1.1.4",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.10.13",
    "morgan": "^1.10.0",
    "multer": "^1.4.2"
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "nodemon": "^2.0.6"
  }
}
